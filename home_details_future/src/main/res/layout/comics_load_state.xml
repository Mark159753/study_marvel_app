<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/comics_recycler_width"
    android:layout_height="@dimen/comics_recycler_height"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools">
    <TextView
        android:id="@+id/comics_load_state_error_msg"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:lines="4"
        android:ellipsize="end"
        tools:text="Internet Connection Lost"/>

    <ProgressBar
        android:id="@+id/comics_load_state_progress_bar"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="12dp"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/comics_load_state_retry_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/my_retry"/>

</LinearLayout>